{
  "name": "react-beautiful-color",
  "version": "1.0.3",
  "description": "Ultra-lightweight, beautiful color picker for React with compound components - minimal and extremely customizable",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "style": "dist/react-beautiful-color.css",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build:js": "vite build",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build": "npm run build:js && npm run build:types",
    "dev": "vite build --watch",
    "test": "jest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run build",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "keywords": [
    "react",
    "color-picker",
    "compound-components",
    "beautiful",
    "typescript",
    "lightweight",
    "customizable",
    "minimal",
    "color",
    "hex",
    "rgb",
    "hsl",
    "hsv"
  ],
  "author": "ozergokalpsezer",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "lucide-react": ">=0.200.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.0.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.1.0",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  }
}
